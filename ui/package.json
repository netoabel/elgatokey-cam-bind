{
  "name": "keylight-control",
  "private": true,
  "version": "0.0.0",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && tsc -p electron -w\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && tsc -p tsconfig.electron.json && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.3",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-window-state": "^5.0.3",
    "lucide-react": "^0.259.0",
    "next-themes": "^0.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.13.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/electron-window-state": "^2.0.34",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.0",
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.0.2",
    "vite": "^4.5.5",
    "wait-on": "^7.0.1"
  },
  "main": "electron-dist/main.js",
  "build": {
    "appId": "com.keylight.control",
    "files": [
      "dist/**/*",
      "electron-dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}
